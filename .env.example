# HoneyAgent Environment Variables
# Copy to .env and fill in values

# ============================================================
# AUTH0 CONFIGURATION
# ============================================================

# Auth0 domain (without https://)
AUTH0_DOMAIN=your-tenant.us.auth0.com

# API audience (must match what's configured in Auth0)
AUTH0_AUDIENCE=https://honeyagent-swarm.api

# Real agent M2M app credentials
AUTH0_REAL_CLIENT_ID=your_real_client_id
AUTH0_REAL_CLIENT_SECRET=your_real_client_secret

# Honeypot agent M2M app credentials
AUTH0_HONEYPOT_CLIENT_ID=your_honeypot_client_id
AUTH0_HONEYPOT_CLIENT_SECRET=your_honeypot_client_secret

# FGA configuration
AUTH0_FGA_STORE_ID=your_fga_store_id
AUTH0_FGA_API_URL=https://api.us1.fga.dev
AUTH0_FGA_API_TOKEN=your_fga_api_token

# ============================================================
# AWS CONFIGURATION
# ============================================================

# AWS region
AWS_REGION=us-east-1

# AWS credentials (or use IAM role)
AWS_ACCESS_KEY_ID=your_access_key_id
AWS_SECRET_ACCESS_KEY=your_secret_access_key

# S3 Vectors bucket name
S3_VECTORS_BUCKET=honeyagent-fingerprints

# Bedrock model ID
BEDROCK_MODEL_ID=us.anthropic.claude-sonnet-4-20250514

# ============================================================
# APPLICATION CONFIGURATION
# ============================================================

# Environment: development | production
ENVIRONMENT=development

# Log level: DEBUG | INFO | WARNING | ERROR
LOG_LEVEL=INFO

# Local fallback log file (used when S3 Vectors unavailable)
LOCAL_LOG_FILE=logs/fingerprints.jsonl

# ============================================================
# DEMO CONFIGURATION
# ============================================================

# Enable demo mode (use fallbacks more aggressively)
DEMO_MODE=true

# Demo: simulate network latency (ms)
DEMO_LATENCY=0
